tray-padding = 4

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = false
index-sort = false
enable-click = true
enable-scroll = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = ${colors.text}
label-mode-background = ${colors.bg}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.fg}
label-focused-padding = 1
label-focused-underline = ${colors.fg}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.color1}
label-urgent-padding = 1

[module/i3-padding]
type = custom/text
content = "    "
content-background = ${colors.bg}
content-foreground = ${colors.text}

[module/title]
type = internal/xwindow

; Available tags:
;   <label> (default)
format-background = ${colors.fg}
format-foreground = ${colors.text}
format-padding = 4
label = %title%
label-maxlen = 100

[module/icon-fs]
type = custom/text
content = "  "
content-background = ${colors.bg}
content-foreground = ${colors.text}
click-left = qdirstat /

[module/filesystem]
type = internal/fs
mount-0 = /
mount-1 = /home
mount-2 = /home/ncc/documents
interval = 30
spacing = 4
format-mounted = <label-mounted>
label-mounted = %mountpoint%: %percentage_used%%

[module/icon-ram]
type = custom/text
content = "      "
content-background = ${colors.bg}
content-foreground = ${colors.text}
click-left = urxvt -e top &

[module/memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.color7}
format-underline = ${colors.bg}
label = "%gb_used%    "
spacing = 4

[module/icon-temp]
type = custom/text
content = "  "
content-background = ${colors.bg}
content-foreground = ${colors.text}

[module/temperature]
type = internal/temperature

; Thermal zone to use
; To list all the zone types, run
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 1

; Full path of temperature sysfs path
; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input

format = <label>
format-warn = <label-warn>
label = "%temperature-f%    "
label-warn = "%temperature-f%    "
label-warn-foreground = ${colors.color1}

[module/icon-cpu]
type = custom/text
content = "  "
content-background = ${colors.bg}
content-foreground = ${colors.text}
click-left = xfce4-taskmanager &

[module/cpuload]
type = custom/script
label = "%output%    "
interval = 1
format-underline = ${colors.bg}
exec = ~/bin/polybar-cpu-load.sh

[module/icon-rpm]
type = custom/text
content = "  "
content-background = ${colors.bg}
content-foreground = ${colors.text}
click-left = dnfdragora &

[module/dnf-updates]
type = custom/script
label = "%output%    "
interval = 60
format-underline = ${colors.bg}
exec = dnf check-update | sed -n '1!p' | wc -l

[module/icon-calendar]
type = custom/text
content = "    "
content-background = ${colors.fg}
content-foreground = ${colors.text}
click-left = orage &

[module/date]
type = internal/date
interval = 1.0
date =
time = %r
format = <label>
label = %time%  %date%
date-alt = %m/%d/%Y
time-alt = %r
format-background = ${colors.fg}
format-foreground = ${colors.text}






