[global/wm]
margin-top = 0
margin-bottom = 0

[bar/main]
bottom = false
monitor = DP-2-1
monitor-fallback = eDP-1
width = 100%
height = 20
background = ${colors.bg}
foreground = ${colors.text}
module-margin-left = 0
module-margin-right = 0
font-0 = FontAwesome:size=10;2
font-1 = monospace:size=9;2
modules-left = i3 i3-padding title
modules-right = icon-fs filesystem icon-ram memory icon-cpu cpuload icon-temp temperature icon-rpm dnf-updates icon-calendar date
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
tray-position = right
tray-background = ${colors.fg}
tray-padding = 4

[bar/secondary]
bottom = false
monitor = DP-2-2
width = 100%
height = 20
background = ${colors.bg}
foreground = ${colors.text}
module-margin-left = 0
module-margin-right = 0
